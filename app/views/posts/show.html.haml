.ui.main.container.grid
  .row
    %h1= @post.title
  .row
    %p= @post.content

  #comments
    .row
      %h3
        Replies:
        = @post.comments.count
    .row
      = render @post.comments

    .row
      %h3 Reply to thread
      = render "comments/form"

  .row
    = link_to "Edit", edit_post_path(@post)
    |
    = link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure?" }
  .row
    = link_to "<< Back to Forum", posts_path
