- if !@user.admin
  %i.close.icon
  .header
    Book a new Lesson
  .content
    %p
      %i
        “Live as if you were to die tomorrow. Learn as if you were to live forever.” (Mahatma Gandhi)
    = simple_form_for @lesson, remote: true, html: { :class => 'ui form'} do |f|
      .field
        = f.label :start_time, label: "Choose a date and time"
        = f.datetime_field :start_time
      = f.button :submit, "Book Lesson", :class => "ui teal button"

- elsif @user.admin
  %i.close.icon
  .header
    Book a Lesson
  .content
    %h2
      Date:
      = @lesson.start_time.to_formatted_s(:short)
    = simple_form_for @lesson, remote: true, html: { :class => 'ui form'} do |f|
      .field
        = f.label :start_time, label: "Choose a date and time"
        = f.datetime_field :start_time

      .field
        = f.label "Which Student?"
        = f.select(:user_id, User.all.collect {|x| [x.name, x.id]})

      = f.button :submit, "Book Lesson", :class => "ui teal button"
