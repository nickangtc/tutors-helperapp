
.ui.container.stackable.grid.centered
  .six.wide.column
    %h1 Log in

    .ui.padded.segment
      .ui.items
        .item
          .content
            = simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "ui form" }) do |f|
              .field
                = f.label :email
                = f.email_field :email, placeholder: "your@email.com", required: "required", autofocus: true
              .field
                = f.label :password
                = f.password_field :password, placeholder: "Enter password", required: "required"
              .inline.field
                = f.check_box :remember_me, as: :boolean if devise_mapping.rememberable?
                = f.label :remember_me
              .field
                = f.submit class: "ui green submit button"

    .row
      = render "devise/shared/links"
