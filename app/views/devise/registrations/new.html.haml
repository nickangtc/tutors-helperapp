.ui.container.stackable.grid.centered
  .six.wide.column
    %h1 Sign up

    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "ui form" }) do |f|
      = f.error_notification
      .field
        = f.input :name, required: "required", autofocus: true, autocomplete: "off"
      .field
        = f.input :email, required: "required", autofocus: true, autocomplete: "off"
      .field
        = f.input :password, required: "required", hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length)
      .field
        = f.input :password_confirmation, required: "required"
      .field
        = f.submit class: "ui teal submit button"

    = render "devise/shared/links"
